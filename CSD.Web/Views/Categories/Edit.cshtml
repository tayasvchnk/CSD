@model CSD.Web.Models.Category
@{
    ViewData["Title"] = "Редактировать категорию";
}

<h1>Редактировать категорию</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="form-text text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ParentId" class="form-label"></label>
                @if (ViewBag.Categories != null)
                {
                    <select asp-for="ParentId" asp-items="ViewBag.Categories" class="form-select">
                        <option selected="selected" value="0">Верхний уровень</option>
                    </select>
                    <span asp-validation-for="ParentId" class="form-text text-danger"></span>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}




